<%- include('partials/header') -%>

<section class="container">
    <h2>Our Tastiest Treats...</h2>

    <% for(var i=0; i<cakes.length; i++) {%>
        <div class="col s12 m6">
            <div class="card cyan lighten-3">
                <div class="card-content black-text">
                <span class="card-title"><%=cakes[i].name%></span>
                <p><%=cakes[i].description%></p>
                <p>Cake: <%=cakes[i].cake%>  Buttercream: <%=cakes[i].butterCream%>   Filling: <%=cakes[i].filling%></p>
                </div>
                <div class="card-action">
                <a href="/order/<%=cakes[i]._id%>">Order</a>
                </div>
            </div>
        </div>
    <% } %>
            
</section>


<%- include('partials/footer') -%>